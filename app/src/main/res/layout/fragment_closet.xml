<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".screens.ClosetFragment">

    <ImageView
        android:id="@+id/person"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/personone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/personOne"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/personone"
        app:layout_constraintBottom_toTopOf="@+id/personTwo"
        app:layout_constraintEnd_toStartOf="@+id/personThree"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/enterName"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/personThree"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/personthree"
        app:layout_constraintBottom_toBottomOf="@+id/personOne"
        app:layout_constraintStart_toEndOf="@+id/personOne"
        app:layout_constraintTop_toTopOf="@+id/personOne" />

    <ImageView
        android:id="@+id/personFour"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/personfour"
        app:layout_constraintBottom_toBottomOf="@+id/personTwo"
        app:layout_constraintEnd_toEndOf="@+id/personThree"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/personOne"
        app:layout_constraintTop_toTopOf="@+id/personTwo" />

    <ImageView
        android:id="@+id/personTwo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/persontwo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/personOne"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/personOne"
        app:layout_constraintTop_toBottomOf="@+id/personOne" />

    <ImageView
        android:id="@+id/eyes"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:src="@drawable/eyesone"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="@+id/person"
        app:layout_constraintHorizontal_bias=".377"
        app:layout_constraintStart_toStartOf="@+id/person"
        app:layout_constraintTop_toTopOf="@+id/person"
        app:layout_constraintVertical_bias=".334" />

    <ImageView
        android:id="@+id/eyesOne"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/eyesone"
        app:layout_constraintBottom_toTopOf="@+id/eyesThree"
        app:layout_constraintEnd_toStartOf="@+id/eyesTwo"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/personThree"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/eyesTwo"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:src="@drawable/eyestwo"
        app:layout_constraintBottom_toBottomOf="@+id/eyesOne"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eyesOne"
        app:layout_constraintTop_toTopOf="@+id/eyesOne" />

    <ImageView
        android:id="@+id/eyesThree"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:src="@drawable/eyesthree"
        app:layout_constraintEnd_toStartOf="@+id/eyesFour"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/eyesOne"
        app:layout_constraintTop_toBottomOf="@+id/eyesOne" />

    <ImageView
        android:id="@+id/eyesFour"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:src="@drawable/eyesfour"
        app:layout_constraintBottom_toBottomOf="@+id/eyesThree"
        app:layout_constraintEnd_toEndOf="@+id/eyesTwo"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/eyesThree"
        app:layout_constraintTop_toBottomOf="@+id/eyesOne"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/enterName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/eyesTwo"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person" />

    <Button
        android:id="@+id/check"
        android:layout_width="50dp"
        android:layout_height="60dp"
        android:text="@string/check"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/leftpart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blackleftpart"
        app:layout_constraintBottom_toBottomOf="@+id/rightpart"
        app:layout_constraintEnd_toStartOf="@+id/middlepart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/rightpart"
        app:layout_constraintTop_toTopOf="@+id/rightpart" />

    <ImageView
        android:id="@+id/middlepart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blackmiddlepart"
        app:layout_constraintBottom_toBottomOf="@+id/rightpart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/leftpart"
        app:layout_constraintTop_toTopOf="@+id/rightpart" />

    <ImageView
        android:id="@+id/pigtails"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blackpigtails"
        app:layout_constraintBottom_toBottomOf="@+id/longmiddlepart"
        app:layout_constraintEnd_toStartOf="@+id/longrightpart"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/longmiddlepart"
        app:layout_constraintTop_toTopOf="@+id/longmiddlepart" />

    <ImageView
        android:id="@+id/rightpart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/blackrightpart"
        app:layout_constraintBottom_toTopOf="@+id/longmiddlepart"
        app:layout_constraintEnd_toStartOf="@+id/leftpart"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/personFour"
        app:layout_constraintVertical_chainStyle="packed" />

    <ImageView
        android:id="@+id/longmiddlepart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/longblackmiddlepart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pigtails"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@+id/rightpart"
        app:layout_constraintTop_toBottomOf="@+id/rightpart" />

    <ImageView
        android:id="@+id/longrightpart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/longblackrightpart"
        app:layout_constraintBottom_toBottomOf="@+id/longmiddlepart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/pigtails"
        app:layout_constraintTop_toTopOf="@+id/longmiddlepart" />

    <Button
        android:id="@+id/haircolor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="@string/hair_color"
        app:layout_constraintBottom_toBottomOf="@+id/personFour"
        app:layout_constraintEnd_toEndOf="@+id/eyesFour"
        app:layout_constraintStart_toStartOf="@+id/eyesThree" />

    <ImageView
        android:id="@+id/hair"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/blackrightpartoverlay"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="@+id/person"
        app:layout_constraintStart_toStartOf="@+id/person"
        app:layout_constraintTop_toTopOf="@+id/person" />

    <ImageView
        android:id="@+id/shirtOverlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/shirtoverlayone"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="@+id/person"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toStartOf="@+id/person" />

    <ImageView
        android:id="@+id/jacketOverlay"
        android:layout_width="200dp"
        android:layout_height="200dp"
        tools:src="@drawable/jacketoverlayone"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="@+id/person"
        app:layout_constraintHorizontal_bias="0.67"
        app:layout_constraintStart_toStartOf="@+id/person"
        app:layout_constraintTop_toTopOf="@+id/person"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/hat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintBottom_toBottomOf="@+id/person"
        app:layout_constraintEnd_toEndOf="@+id/person"
        app:layout_constraintHorizontal_bias="0.56"
        app:layout_constraintStart_toStartOf="@+id/person"
        app:layout_constraintTop_toTopOf="@+id/person"
        app:layout_constraintVertical_bias="0.06"
        tools:src="@drawable/linkhatoverlay" />


</androidx.constraintlayout.widget.ConstraintLayout>